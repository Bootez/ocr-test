<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Overzicht" >

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnInfo"
        android:layout_below="@+id/btnScannen"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/instellingen"
        android:onClick="onSettingsClick" />

    <ImageButton
        android:id="@+id/btnManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/btnScannen"
		android:layout_marginLeft="20dp"
        android:background="@drawable/handmatig"
        android:onClick="manualClick" />

    <ImageButton
        android:id="@+id/btnOverzicht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnScannen"
        android:layout_marginRight="20dp"
        android:background="@drawable/overzicht"
        android:onClick="mijnOverzichtClick" />

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnScannen"
        android:layout_marginTop="20dp"
        android:background="@drawable/informatie"
        android:onClick="infoClick" />

    <ImageButton
        android:id="@+id/btnScannen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/scannen"
        android:onClick="scannenClick" />

</RelativeLayout>
